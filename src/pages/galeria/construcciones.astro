---
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <link rel="icon" href="/favicon.svg" type="image/x-icon" />
    <meta charset="UTF-8">
    <title>ZenForge Studios - Diseños</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" />
  </head>
  <body class="bg-gray-900 text-white font-poppins">
    <Navbar />

    <main class="container mx-auto px-4 py-12">
      <h1 class="text-4xl font-bold text-center mb-8 text-blue-400">Galería de Diseños</h1>

      <!-- Grid de imágenes -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
          <img
            src="/path/to/design1.jpg"
            alt="Diseño 1"
            class="w-full h-60 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-bold text-blue-400">Diseño 1</h3>
            <p class="text-gray-300 mt-2">Descripción breve sobre este diseño.</p>
          </div>
        </div>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
          <img
            src="/path/to/design2.jpg"
            alt="Diseño 2"
            class="w-full h-60 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-bold text-blue-400">Diseño 2</h3>
            <p class="text-gray-300 mt-2">Descripción breve sobre este diseño.</p>
          </div>
        </div>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
          <img
            src="/path/to/design3.jpg"
            alt="Diseño 3"
            class="w-full h-60 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-bold text-blue-400">Diseño 3</h3>
            <p class="text-gray-300 mt-2">Descripción breve sobre este diseño.</p>
          </div>
        </div>
        <!-- Agregar más imágenes según sea necesario -->
      </div>
    </main>

    <Footer />
  </body>
</html>